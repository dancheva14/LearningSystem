@model ELearningSystem.Models.Test
@{
    ViewBag.Title = "Index";
}

@if (Model != null)
{
    using (Html.BeginForm("SubmitTest", "Tests", FormMethod.Post))
    {
        <h2>Тест: @Html.DisplayFor(m => m.Title)</h2>
        @Html.HiddenFor(m => m.Id)
        <div>
            @for (var i = 0; i < Model.Questions.Count; i++)
            {
                <b> @Model.Questions[i].Content </b>

                for (var j = 0; j < Model.Questions[i].Answers.Count; j++)
                {
                    <table>
                        <tr>
                            <td>
                                @Html.CheckBoxFor(m => Model.Questions[i].Answers[j].IsSelected)
                                @Model.Questions[i].Answers[j].Content
                                @Html.HiddenFor(m => m.Questions[i].Answers[j].Id)
                                @Html.HiddenFor(m => m.Questions[i].Answers[j].Content)
                                @Html.HiddenFor(m => m.Questions[i].Id)
                            </td>

                        </tr>
                    </table>
                }
            }
        </div>
        <input type="submit" value=@ELearningSystem.Resources.Resource.strCheck />
    }
}
