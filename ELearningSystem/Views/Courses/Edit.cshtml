@model ELearningSystem.Models.Course
@{
    ViewBag.Title = "Edit";
}
<h2>@ELearningSystem.Resources.Resource.strEditCourse</h2>
@using (Html.BeginForm())
{
    <div>
        @Html.HiddenFor(m => m.Id)

        <div class="editor-label">@Html.LabelFor(s => s.Name)</div>
        <div class="editor-field">
            <input class="form-control"
                   id="Name"
                   name="Name"
                   type="text"
                   placeholder="Име"
                   value="@Model.Name" />
            @Html.ValidationMessageFor(s => s.Name)
        </div>

        <label class="col-lg-10 control-label" for="textArea">@ELearningSystem.Resources.Resource.strCourseContent</label>
        <div>
            @Html.TextAreaFor(model => model.Summary, 10, 40, htmlAttributes: new { style = "width: 100%; max-width: 100%;" })
            <span class="help-block">@ELearningSystem.Resources.Resource.strInsertCourseDescription</span>
        </div>

        <div>
            <input class="col-lg-10" type="submit" value=@ELearningSystem.Resources.Resource.strSave />
        </div>
    </div>
}
